<!DOCTYPE html>
<html>
  <head>
    <title>Cursala Home</title>

    <meta charset="utf-8">
        
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="icon" href="IMAGENES/favicon.svg"> 
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet"> 
   <link rel="stylesheet" href="/stylesheets/home.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
   <link rel="stylesheet" href="/stylesheets/footer.css">
   


</head>

  <body >
    <div id="blocppal">
    <%- include('./partials/header'); %>
       

        
        <div id="container-todos-productos">
            <% for(let producto of listaProductos) {%>
            <div class="container-producto">
                    <a href="/products/<%= producto.id %>">
						<div class="product-box_image">
							<img src="/images/<%= producto.image %>" alt="imagen de producto">
            </div>
						<div class="product-box_data">
              <h2><%= producto.price %></h2>
              <h3><%= producto.name %></h3>
            </div>
          </a>
          <a href="/products/<%= producto.id %>/edit">
          <i class="far fa-edit"></i>
          </a>
            </div>
            <%}%>
    
        </div>
   
         
        <%- include('./partials/footer'); %>
      </div>
   </body>
</html>