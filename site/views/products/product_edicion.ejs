<!DOCTYPE html>
<html>


<%- include('../partials/head',  {title: 'Cursala: carga de producto', file_css: 'product-carga'}); %>
<body>  

  <%- include('../partials/header'); %>

<section>
<div class="carga">
  
        <h2> Edicion de Producto</h2>
        <form action= "<%= "/products/" + producto.id + "?_method=PUT" %>" method="POST" enctype="multipart/form-data">
          <p>
          <label for="name">Nombre</label>
          <input type="text" id="name" name="name" value="<%=producto.name %>" />
          </p>
          <p>
          <label for="category">Categoria</label> 
          <select name="category" id="category">
            <% for (cat of categorias) {%>
              <option value="<%= cat.id%>"  <% if(producto.categoryId == cat.id) {%>   selected <%}%>  ><%= cat.name%></option>
              <% } %>
            </select>
        </p>
            <p>
            <label for="length">Cantidad de horas</label>
            <input type="text" id="length" name="length" value=<%=producto.length %>>
            </p>
            <p>
            <label for="price">Precio</label>
            <input type="text" id="price" name="price" value=<%=producto.price %>> 
            </p>
          <p>
          <label for="image"> Imagen del producto</label>
          <input type="file" id="image" name="image" placeholder="image" value="<%=producto.image %>"/>
        </p>

        <label for="description">Descripcion</label> <br/>
          <textarea name="description" id="description" ><%=producto.description %></textarea>
        
        <div class ="buton">
          <input type="submit" name="submit" class="submit" value="MODIFICAR"/>
        </form>

        
        <form action=<%= "/products/" + producto.id + "?_method=DELETE" %> method="POST" style="display: inline-flex">
          <input type="submit" name="eliminar" class="submit" value="ELIMINAR" >
        </form>
        
      
      </div>

</div>
<script> 
function confirmar(){
  var res = confirm("Confirma la supresion del producto?");
  if(res){
     document.form('eliminar').submit();
  }else{
    document.reload();
  }
}</script>
       
</section>

 <%- include('../partials/footer'); %>
      
</body>
</html>